<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_pridaj"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Pridaj" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                    <Button
                        android:id="@+id/button_odober"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"

                        android:text="Odober"

                        tools:layout_editor_absoluteY="26dp" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/textView_todolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToDo List"
            app:layout_constraintTop_toBottomOf="@+id/button_pridaj"
            tools:layout_editor_absoluteX="40dp" />
        <ListView
            android:id="@+id/ListView_nvm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:listSelector="@color/purple_200"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>